<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onetwopunch.helloworld.LoginActivity">

    <EditText
        android:id="@+id/et_logId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ID"
        android:layout_marginTop="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_logPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@id/et_logId"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/et_logId"
        />

    <CheckBox
        android:id="@+id/checkBox"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/et_logPw"
        android:layout_below="@+id/et_logPw"
        android:layout_marginTop="20dp"
        android:text="AutoLogIn" />

    <Button
        android:id="@+id/bt_logReturn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/et_logPw"
        android:layout_alignTop="@+id/checkBox"
        android:text="Return" />

    <Button
        android:id="@+id/bt_logIn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="31dp"
        android:text="LogIn" />

    <TextView
        android:id="@+id/findProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_logIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="If you forgot your ID or PASSWORD ......"
        android:textSize="22sp" />
    <com.facebook.login.widget.LoginButton
        android:id="@+id/buttonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox" />



</RelativeLayout>
