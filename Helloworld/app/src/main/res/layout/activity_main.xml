<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.onetwopunch.helloworld.MainActivity">

    <Button
        android:id="@+id/bt_LoginMenu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Login_Menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="211dp" />

    <Button
        android:id="@+id/bt_JoinMenu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Join_Menu"
        android:layout_marginTop="83dp"
        android:layout_alignTop="@+id/bt_LoginMenu"
        android:layout_alignStart="@+id/bt_LoginMenu" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bodylogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_introducer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_JoinMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="SHOW_DEVELOPER" />

</RelativeLayout>
